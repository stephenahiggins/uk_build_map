{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI (Gemini)",
      "preLaunchTask": "npm: build",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/cli.ts",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "--locale",
        "Leeds, Halifax, Kirklees, Bradford, Wakefield",
        "--limit",
        "3"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current TS File",
      "preLaunchTask": "npm: build",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI (Custom Args)",
      "preLaunchTask": "npm: build",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/cli.ts",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${input:cliArgs}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "processId": "${command:PickProcess}",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    }
  ],
  "inputs": [
    {
      "id": "cliArgs",
      "type": "promptString",
      "description": "CLI arguments (e.g. --locale 'West Yorkshire' --limit 3)"
    }
  ]
}