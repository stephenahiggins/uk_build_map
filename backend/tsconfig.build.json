{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src"
  },
  // Limit build to application source only; scripts are handled separately (e.g. via ts-node or a dedicated tsconfig.scripts.json)
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "__test",
    "**/*.spec.ts",
    "**/*.spec.js",
    "*.spec.ts",
    "**/spec.ts",
    "**/*.test.ts",
    "*.test.ts",
    "**/test.ts"
  ]
}